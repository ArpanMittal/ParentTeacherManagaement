<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button1"
        android:isScrollContainer="false" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:id="@+id/imageView"

                android:src="@drawable/logo"
                android:elevation="2dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Student's Information"
                android:id="@+id/info"
                android:background="@color/cardview_shadow_start_color"
                android:editable="false"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp">
            </TextView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                android:visibility="visible"
                android:background="@color/cardview_light_background"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="7dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/image_studentName"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_face_black_24dp"
                            android:layout_weight="0.06" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/studentName_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/studentName1"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:editable="false"
                                android:hint="Student Name"
                                android:inputType="textPersonName"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>
                    <Space
                        android:layout_width="44dp"
                        android:layout_height="0dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_assignment_ind_black_24dp"
                            android:layout_weight="0.06" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/grade_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/grade1"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:editable="false"
                                android:hint="Grade"
                                android:inputType="textCapWords"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView211"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_date_range_black_24dp"
                            android:layout_weight="0.06" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/DOB_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/DOB"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:editable="false"
                                android:hint="Date of Birth"
                                android:inputType="date"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Your Information"
                android:background="@color/cardview_shadow_start_color"
                android:editable="false"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp">
            </TextView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_margin="5dp"
                android:visibility="visible"
                android:layout_marginTop="100dp"
                android:background="@color/cardview_light_background"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView34551"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_perm_identity_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/fatherName_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/fatherName"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Father's Name"
                                android:inputType="textPersonName"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView34545"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_perm_identity_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/motherName_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/motherName"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Mother's Name"
                                android:inputType="textPersonName"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView34355"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_phone_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/primaryNumber_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/primaryNumber"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Primary Number"
                                android:inputType="phone"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView34554"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_phone_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/secondaryNumber_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/secondaryNumber"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Secondary Number"
                                android:inputType="phone"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView3455"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_home_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/address_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/address1"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Address"
                                android:inputType="textPostalAddress"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Teacher's Information"
                android:background="@color/cardview_shadow_start_color"
                android:editable="false"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp">
            </TextView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_margin="5dp"
                android:visibility="visible"
                android:layout_marginTop="100dp"
                android:background="@color/cardview_light_background"
                app:cardBackgroundColor="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView354"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_perm_identity_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/teacherName_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/teacherName1"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Teacher's Name"
                                android:inputType="textPersonName"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView34"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:srcCompat="@drawable/ic_phone_black_24dp"
                            android:layout_weight="0.06" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/teacherContact_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/teacherContact1"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:ems="10"
                                android:hint="Contact"
                                android:inputType="phone"
                                android:maxLines="1"/>

                        </android.support.design.widget.TextInputLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_weight="0.1"/>
                    </LinearLayout>


                  </LinearLayout>

            </android.support.v7.widget.CardView>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.dd.CircularProgressButton
                    android:id="@+id/done"
                    android:layout_gravity="center"
                    android:layout_width="196dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/cpb_white"
                    android:textSize="18sp"
                    app:cpb_cornerRadius="48dp"
                    app:cpb_paddingProgress="10dp"
                    app:cpb_textComplete="Complete"
                    app:cpb_textError="Error"
                    app:cpb_textIdle="Upload" />
                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Logout"
                    android:id="@+id/done11">

                </Button>
                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Appointments"
                    android:id="@+id/cancelled_events"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>